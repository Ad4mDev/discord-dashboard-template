<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/static/bootstrap.min.css" />
    <link rel="stylesheet" href="/static/style.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" />
    <link rel="stylesheet" href="/static/css/tailwind.output.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css" />
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
  </head>

  <body class="antialiased font-sans">
    <div class="bg-black">
    <div class="relative" x-data="Components.popover({ open: true, focus: true })" x-init="init()" @keydown.escape="onEscape" @close-popover-group.window="onClosePopoverGroup">
      <div class="max-w-full mx-auto px-4 sm:px-6">
        <div class="flex justify-between items-center border-b-2 border-gray-800 py-6 md:justify-start md:space-x-10">
          <div class="flex justify-start items-center flex-row lg:w-0 lg:flex-1">
            <a href="#">
              <img class="rounded-full h-16 w-16 mr-3" src="https://cdn.discordapp.com/avatars/<%= bot.user.id %>/<%= bot.user.avatar %>.png?size=256" alt="">
            </a>
            <h1 class="font-sans text-2xl text-blue-500"><%= bot.user.username %></h1>

          </div>
          <nav class="hidden md:flex space-x-10 flex justify-start" x-data="Components.popoverGroup()" x-init="init()">
            <a href="#" class="text-base font-medium text-2xl text-gray-500 ">
              Dashboard
            </a>
            <a href="#" class="text-base font-medium text-2xl text-gray-500">
              Docs
            </a>
          </nav>
          <div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0">
            <% if (user) { %>
              <div class="relative text-sm text-gray-100 bg-gray-800 p-2 rounded-lg">
                <button id="userButton" class="flex items-center focus:outline-none mr-3">
                 <img class="w-8 h-8 rounded-full mr-4" src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>" class="card-img-top" style="max-width: 18rem;"> 
                    <span class="hidden md:inline-block text-gray-100">Hi, <%= user.username %></span>
                    <svg class="pl-2 h-2 fill-current text-gray-100" version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 129 129" xmlns:xlink="http://www.w3.org/1999/xlink" enable-background="new 0 0 129 129">
                      <g>
                        <path
                          d="m121.3,34.6c-1.6-1.6-4.2-1.6-5.8,0l-51,51.1-51.1-51.1c-1.6-1.6-4.2-1.6-5.8,0-1.6,1.6-1.6,4.2 0,5.8l53.9,53.9c0.8,0.8 1.8,1.2 2.9,1.2 1,0 2.1-0.4 2.9-1.2l53.9-53.9c1.7-1.6 1.7-4.2 0.1-5.8z" />
                      </g>
                    </svg>
                </button>
                <div id="userMenu" class="bg-black rounded shadow-md absolute mt-14 top-0 right-0 min-w-full overflow-auto z-30 invisible">
                <ul class="list-reset">
                  <li>
                    <a href="/logout" class="px-4 py-2 block text-gray-100 bg-gray-800 hover:bg-gray-600 no-underline hover:no-underline">Logout</a>
                  </li>
                </ul>
              </div>
              </div>
            <% } else { %>
            <a href="/login" class="ml-8 whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-gray-100 border-2 rounded-md shadow-sm text-base font-medium text-white" style="background-color: #5865F2;">
              Login
            </a>
            <% } %>
          </div>
        </div>
      </div>
  

    </div>
  </div>
